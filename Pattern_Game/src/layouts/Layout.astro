---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Social Media Meta Tags -->
    <meta property="og:title" content="Pattern Memory Puzzle" />
    <meta property="og:description" content="Test your memory with this addictive pattern matching puzzle game!" />
    <meta property="og:image" content="/game-preview.png" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body class="min-h-screen bg-gray-900 text-white">
    <slot />
  </body>
</html>